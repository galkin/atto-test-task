{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "pretty": true,
    "removeComments": true,
    "rootDir": "./src",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "outDir": "build",
    "target": "es2017"
  },
  "include": [
    "src/**/*"
  ]
}
